        "status": {
          "default": null,
          "enum": [
            "draft",
            "validated",
            null
          ],
          "type": [
            "string",
            "null"
          ]
        },
        "warnings": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "name",
        "full_name"
      ],
      "type": "object"
    }
