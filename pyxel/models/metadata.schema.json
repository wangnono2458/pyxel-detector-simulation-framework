          },
          "type": [
            "array",
            "null"
          ]
        },
        "config": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "description": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "detector": {
          "anyOf": [
            {
              "enum": [
                "all",
                "CCD",
                "CMOS",
                "APD",
                "MKID"
              ],
              "type": "string"
            },
            {
              "items": {
                "enum": [
                  "all",
                  "CCD",
                  "CMOS",
                  "APD",
                  "MKID"
                ],
                "type": "string"
              },
              "type": "array"
            }
          ]
